[{ elvis
 , [
    { config,
      [ #{ dirs    => ["src"]
         , filter  => "*.erl"
         , ruleset => erl_files
         , rules   => [ {elvis_style, god_modules, #{ignore => [els_client]}}
                      , {elvis_style, invalid_dynamic_call, #{ignore => [ els_compiler_diagnostics
                                                                        , els_server
                                                                        , els_app
                                                                        , els_tcp
                                                                        ]}}
                      , {elvis_style, line_length, #{limit => 80, skip_comments => false}}
                      , {elvis_style, operator_spaces, #{ rules => [ {right, ","}
                                                                   , {left , "-"}
                                                                   , {right, "+"}
                                                                   , {left , "+"}
                                                                   , {right, "*"}
                                                                   , {left , "*"}
                                                                   , {right, "--"}
                                                                   , {left , "--"}
                                                                   , {right, "++"}
                                                                   , {left , "++"}
                                                                   , {right, "->"}
                                                                   , {left , "->"}
                                                                   , {right, "=>"}
                                                                   , {left , "=>"}
                                                                   , {right, "<-"}
                                                                   , {left , "<-"}
                                                                   , {right, "<="}
                                                                   , {left , "<="}
                                                                   , {right, "||"}
                                                                   , {left , "||"}
                                                                   , {right, "!"}
                                                                   , {left , "!"}
                                                                   , {right, "=:="}
                                                                   , {left , "=:="}
                                                                   , {right, "=/="}
                                                                   , {left , "=/="}
                                                                   ]}}
                      , {elvis_style, function_naming_convention, #{ignore => [els_client]}}
                      ]
         , ignore => [els_dodger]
         }
      , #{ dirs    => ["."]
         , filter  => "Makefile"
         , ruleset => makefiles
         }
      , #{ dirs    => ["."]
         , filter  => "rebar.config"
         , ruleset => rebar_config
         }
      , #{ dirs    => ["."]
         , filter  => "elvis.config"
         , ruleset => elvis_config
         }
      ]}
   ]}
].
